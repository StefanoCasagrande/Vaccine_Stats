<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Background_1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:fontFamily="@font/free_solid_900"
                android:textSize="35sp"
                android:textColor="@color/Icons"
                android:layout_gravity="center_vertical"
                android:text=""/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:id="@+id/tv_location"
                    android:textColor="@color/Text_Big"
                    android:text="@string/Big_Title_Placeholder"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/tv_total"
                    android:textColor="@color/Text_Small"
                    android:text="@string/Small_Text_Placeholder"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:background="@color/Dividing_Bar"
            android:layout_height="0.5dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:fontFamily="@font/free_solid_900"
                android:textSize="35sp"
                android:textColor="@color/Icons"
                android:layout_gravity="center_vertical"
                android:text=""/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:id="@+id/tv_doses_administered"
                    android:textColor="@color/Text_Big"
                    android:text="@string/Big_Title_Placeholder"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/Text_Small"
                    android:text="@string/doses_administered_first_second"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:fontFamily="@font/free_solid_900"
                android:textSize="35sp"
                android:textColor="@color/Icons"
                android:layout_gravity="center_vertical"
                android:text=""/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:id="@+id/tv_total_delivered"
                    android:textColor="@color/Text_Big"
                    android:text="@string/Big_Title_Placeholder"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/Text_Small"
                    android:text="@string/Doses_Delivered"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:background="@color/Dividing_Bar"
            android:layout_height="0.5dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/free_solid_900"
                android:gravity="center_vertical"
                android:text=""
                android:layout_height="match_parent"/>

            <EditText
                android:layout_marginStart="5dp"
                android:id="@+id/SearchEditText"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:padding="5dp"
                android:hint="@string/look_for_hint"
                android:textColorHint="@color/Text_Small"
                android:textColor="@color/Text_Small"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="0dp"/>

        </LinearLayout>



        <View
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:background="@color/Dividing_Bar"
            android:layout_height="0.5dp"
            />

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:id="@+id/listView"/>

        <LinearLayout
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/free_solid_900"
                android:textColor="@color/Text_Small"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="150sp"
                android:layout_marginBottom="20dp"
                android:text=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Text_Small"
                android:textSize="20sp"
                android:text="@string/empty_text"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>